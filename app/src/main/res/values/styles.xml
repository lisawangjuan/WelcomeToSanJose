<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>


    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/category_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="InsightNameStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="InsightAddressStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InsightVideoStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">top</item>
    </style>
</resources>
